@page "/select"
<IonContent>
    <IonList>
        <ion-item>
            <IonLabel>Select control with own child content provided</IonLabel>
            <IonSelect TItem="string" value="brown" ok-text="Okay" cancel-text="Dismiss">
                <ion-select-option value="brown">Brown</ion-select-option>
                <ion-select-option value="blonde">Blonde</ion-select-option>
                <ion-select-option value="black">Black</ion-select-option>
                <ion-select-option value="red">Red</ion-select-option>
            </IonSelect>
        </ion-item>

        <ion-item>
            <IonLabel>Select control with C# options provided. Selected value: @SelectedValue</IonLabel>
            <IonSelect Options="@Options" @bind-Value="SelectedValue" ok-text="Okay" cancel-text="Dismiss">
            </IonSelect>
        </ion-item>

        <ion-item>
            <IonLabel>Select control with C# complex options provided. Selected value: @SelectedComplexValue</IonLabel>
            <IonSelect Options="@ComplexOptions" @bind-Value="SelectedComplexValue" ok-text="Okay" cancel-text="Dismiss">
            </IonSelect>
        </ion-item>
        <IonListHeader>
            <IonLabel>
                MultiSelect
            </IonLabel>
        </IonListHeader>
        <ion-item>
            <IonLabel>Select control with own child content provided</IonLabel>
            <IonMultipleSelect TItem="string"  @bind-Value="SelectedValues"  ok-text="Okay" cancel-text="Dismiss">
                <ion-select-option value="item1">1</ion-select-option>
                <ion-select-option value="item2">2</ion-select-option>
                <ion-select-option value="item3">3</ion-select-option>
            </IonMultipleSelect>
        </ion-item>
         <ion-item>
            <IonLabel>Select control with C# options provided. Selected value: @SelectedValues?.Count()</IonLabel>
            <IonMultipleSelect Options="@Options" @bind-Value="SelectedValues" ok-text="Okay" cancel-text="Dismiss">
            </IonMultipleSelect>
        </ion-item>
        
                <ion-item>
                    <IonLabel>Select control with C# complex options provided. Selected value: @SelectedComplexValues?.Count()</IonLabel>
                    <IonMultipleSelect Options="@ComplexOptions" @bind-Value="SelectedComplexValues" ok-text="Okay" cancel-text="Dismiss">
                    </IonMultipleSelect>
                </ion-item>
    </IonList>
</IonContent>

@code {
    public string SelectedValue { get; set; }
    public IEnumerable<string> SelectedValues { get; set; }

    public ComplexOption SelectedComplexValue { get; set; }
    public IEnumerable<ComplexOption> SelectedComplexValues { get; set; }

    public List<string> Options { get; set; } = new List<string>()
    {
        "item1",
        "item2",
        "item3"
    };

    public List<ComplexOption> ComplexOptions { get; set; } = new List<ComplexOption>()
    {
        new ComplexOption()
        {
            Text = "item1",
            Value = "value-1"
        },
        new ComplexOption()
        {
            Text = "item3",
            Value = "value-4"
        },
        new ComplexOption()
        {
            Text = "item2",
            Value = "value-2"
        }
    };

    public class ComplexOption
    {
        public string Text { get; set; }
        public string Value { get; set; }

        public override string ToString()
        {
            return Text;
        }
    }

}